<div class="container-fluid fill login-container">
    <div class="row">
        <div class="col-lg-4 col-md-5 col-sm-7 col-centered login-image">

        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-5 col-sm-7 col-centered">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Request an account.</h3>
                </div>
                <div class="panel-body">
                    <form id="registerForm">
                        <div class="form-group">
                            <label for="username" class="control-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Enter username">
                        </div>
                        <div class="form-group">
                            <label for="email" class="control-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <label for="password" class="control-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="firstName" class="control-label">First Name</label>
                            <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Enter first name">
                        </div>
                        <div class="form-group">
                            <label for="lastName" class="control-label">Last Name</label>
                            <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Enter last name">
                        </div>
                        <hr class="form-divider">
                        <button type="submit" class="btn btn-primary" style="min-width: 100%;">Request account</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <p class="text-center"><a href="/" style="color: #ffffff;">Go back.</a></p>
    </div>

</div>