<div class="container-fluid fill login-container">
    <div class="row">
        <div class="col-lg-4 col-md-5 col-sm-7 col-centered login-image">

        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-5 col-sm-7 col-centered">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Login to get started</h3>
                </div>
                <div class="panel-body">
                    <form id="loginForm">
                        <div class="form-group">
                            <label for="identification" class="control-label">Username or Email</label>
                            <input type="text" class="form-control" id="identification" name="identification" placeholder="Enter username or email">
                        </div>
                        <div class="form-group">
                            <label for="password" class="control-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
                        </div>
                        <hr class="form-divider">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <p class="text-center"><a href="/register" style="color: #ffffff;">Request an account.</a></p>
    </div>

</div>